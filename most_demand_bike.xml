<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="98dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ms_image"
            android:layout_width="115dp"
            android:layout_height="57dp"
            android:scaleType="centerCrop"
            android:src="@drawable/roadbike" />

        <TextView
            android:id="@+id/mv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ms_image"
            android:fontFamily="@font/amaranth_italic"
            android:text="ROAD Bike"
            android:textSize="20dp" />

        <RatingBar
            android:id="@+id/mv_rating"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mv_title"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ms_image"
            android:rating="4" />

        <TextView
            android:id="@+id/mv_desc"
            android:layout_width="160dp"
            android:layout_height="34dp"
            android:layout_below="@id/mv_rating"
            android:layout_toRightOf="@id/ms_image"
            android:padding="10dp"
            android:text="The bike that you love and easy to bring"
            android:textSize="8sp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>